<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="ShardsinstallerInstallProgress" parent="AdwBin">
    <property name="valign">fill</property>
    <property name="halign">fill</property>
    <property name="hexpand">True</property>
    <property name="vexpand">True</property>
    <child>
      <object class="AdwStatusPage">
        <property name="valign">fill</property>
        <property name="halign">fill</property>
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>
        <property name="title">Installing Project Shards</property>
        <property name="description">This may take some time. Please do not power off the computer.</property>"
        <child>
          <object class="GtkBox">
            <property name="spacing">10</property>
            <property name="orientation">vertical</property>
            <property name="valign">fill</property>
            <property name="halign">fill</property>
            <property name="vexpand">true</property>
            <child>
              <object class="GtkProgressBar" id="progressbar">
                <property name="margin-start">40</property>
                <property name="margin-end">40</property>
                <property name="show-text">true</property>
                <property name="fraction">0.0</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

